// webkit-prefixed Screen Orientation API that is actually shipping.
[
    RuntimeEnabled=PrefixedScreenOrientation,
    ImplementedAs=ScreenOrientation
] partial interface Screen {
    [ImplementedAs=orientation] readonly attribute DOMString webkitOrientation;

    [ImplementedAs=lockOrientation, RaisesException] boolean webkitLockOrientation(DOMString orientation);

    [ImplementedAs=unlockOrientation] void webkitUnlockOrientation();
    attribute EventHandler onwebkitorientationchange;
};
